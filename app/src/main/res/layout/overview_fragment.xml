<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListViewBackgroundDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorChartBackground" />

        <LinearLayout
            android:id="@+id/llDuratnSO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:id="@+id/ll5m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv5m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="5m"
                    android:textColor="@color/colorTextLight"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll30m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv30m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="30m"
                    android:textColor="@color/colorTextLight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll6hr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv6hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="6Hr"
                    android:textColor="@color/colorTextLight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="1D"
                    android:textColor="@color/colorTextLight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll7d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="7D"
                    android:textColor="@color/colorTextLight" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:text="Overview page is in development, please check the Markets screen!"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
